<script>
	function foo(){
		if(myform.title.value==""){
			alert("请您填写新闻标题");
			// 该方法表示将输入焦点移至对象上
			myform.title.focus();
			// return false一般是用来取消默认动作的。
			// 比如你单击一个链接除了触发你的onclick事件，如果return false的话，就会阻止跳转
			return false;
		}
		if (myform.content.value==""){
			alert("新闻内容不能为空！");
			myform.content.focus();
			return false;
		}
	}
</script>
<body>
	<!-- 
	action是表明需要向何处提交表单
	onsubmit 事件会在表单中的确认按钮被点击时发生。 
	-->
	<form action="newslist.html" onsubmit="return foo()" method="post" name="myform">
		<h2>新闻发布系统</h2>
		<table>
			<tr>
				<td>新闻标题：</td>
				<td>
					<input type="text" name="title">
				</td>
			</tr>
			<tr>
				<td>新闻内容：</td>
				<td>
					<textarea name="content" id="" cols="30" rows="10"></textarea>
				</td>
			</tr>
			<tr>
				<td colspan="2">
					<button>发布新闻</button>
				</td>
			</tr>
		</table>
	</form>
</body>
